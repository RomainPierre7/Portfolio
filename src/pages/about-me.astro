import ExperienceCardRight from '../components/ExperienceCardRight.astro'

import EducationCardLeft from '../components/ExperienceCardLeft.astro'
import EducationCardRight from '../components/ExperienceCardRight.astro'

type FrontmatterCard = {
    title: string
    description: string
    image: string
    link: string
    order: number
}

type ExperienceCard = {
    frontmatter: FrontmatterCard
}

type EducationCard = {
    frontmatter: FrontmatterCard
}

function sortByOrder<T extends { frontmatter: { order?: number } }>(a: T, b: T): number {
    const orderA = a.frontmatter.order ?? Infinity
    const orderB = b.frontmatter.order ?? Infinity
    return orderA - orderB
}

const allExperienceCards = await Astro.glob('./experience_cards/*.md*')
allExperienceCards.sort(sortByOrder)

const allEducationCards = await Astro.glob('./education_cards/*.md*')
allEducationCards.sort(sortByOrder)

let i = 0
