    }

    .spacer {
        height: 2rem;
    }

    .section {
        margin: 20px;
    }

    .left-align {
        text-align: left;
        margin-bottom: 10px;
    }

    .skills-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
        gap: 16px;
        margin-bottom: 50px;
    }

    .skill-item {
        display: flex;
        align-items: center;
    }

    .skill-item img {
