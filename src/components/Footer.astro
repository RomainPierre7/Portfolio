---
const year = new Date().getFullYear()

const numberOfStars = await fetch(
    'https://api.github-star-counter.workers.dev/user/romainpierre7'
).then((response) => response.json().then((data) => data.stars))
---

<footer>
    <p>© {year} All rights reserved</p>
    <p>
        Made from scratch | {JSON.stringify(numberOfStars)} ⭐
    </p>
</footer>

<style>
    footer {
        background-color: #64ffda;
        color: #032727;
        text-align: center;
        padding: 1rem;
        height: 5rem; /* Need to change in global.css too */
    }

    footer p {
        margin: 0;
    }
</style>
