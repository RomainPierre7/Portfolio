---
import Navigation from './Navigation.astro'
---

<header>
    <div class="logo">
        <a href="/Portfolio/">
            <img src="/Portfolio/icons/terminal.png" alt="Logo" />
        </a>
    </div>
    <nav>
        <Navigation />
    </nav>
</header>

<style>
    header {
        display: flex;
        flex: 1;
        justify-content: space-between;
        width: 80%;
        margin: 0 auto;
    }

    .logo img {
        width: 5rem;
        margin-top: 1rem;
    }

    .logo img:hover {
        opacity: 0.5;
        transform: scale(1.1);
    }

    nav {
        display: flex;
        flex: 1;
        justify-content: flex-end;
        align-items: center;
    }
</style>
