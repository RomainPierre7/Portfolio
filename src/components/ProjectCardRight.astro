---
interface Props {
    title: string
    description: string
    image: string
    link: string
}
const { title, description, image, link } = Astro.props
---

<a href={link} target="_blank">
    <div class="project-card">
        <div class="project-card_info">
            <div class="project-card_header">
                <h2>{title}</h2>
                <img
                    src="/Portfolio/icons/external-link-white.png"
                    class="white"
                />
                <img
                    src="/Portfolio/icons/external-link-black.png"
                    class="dark"
                />
            </div>
            <p>{description}</p>
        </div>
        <div class="project-card_image">
            <img src={image} />
        </div>
    </div>
</a>

<style>
    .project-card {
        background-color: transparent;
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin: 2rem;
    }

    .project-card_info {
        background-color: #64ffda;
        color: #032727;
        display: flex;
        flex-direction: column;
        width: 35%;
        position: absolute;
        z-index: 1;
        left: 55%;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.8);
        border-radius: 0.5rem;
        padding: 0 0.5rem;
    }

    .project-card_header {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .project-card_header h2 {
        margin: 1rem;
    }

    .project-card_header img {
        width: 1.5rem;
        height: 1.5rem;
        margin: 0 2rem;
    }

    .project-card_info p {
        margin: 1rem;
    }

    .project-card_image {
        width: 32rem;
        height: 18rem;
    }

    .project-card_image img {
        width: 32rem;
        height: 18rem;
        object-fit: cover;
        border-radius: 0.5rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.8);
        z-index: 0;
    }

    .project-card:hover .project-card_image img {
        transform: translateX(-15%);
    }

    .project-card:hover .project-card_info {
        transform: translateX(15%);
    }

    .project-card_image img,
    .project-card_info {
        transition: transform 0.3s ease-in-out;
    }

    .white {
        display: none;
    }

    @media (max-width: 1125px) {
        .project-card:hover .project-card_image img {
            transform: none;
        }

        .project-card:hover .project-card_info {
            transform: none;
        }

        .project-card_info {
            left: 50%;
            transform: translateX(-50%);
            width: 32rem;
            height: 18rem;
            background-color: rgba(0, 0, 0, 0.7);
            color: white;
            font-size: 1.3rem;
        }

        .project-card_image {
            width: 32rem;
            height: 18rem;
        }

        .dark {
            display: none;
        }

        .white {
            display: block;
        }
    }

    @media (max-width: 630px) {
        .project-card_info {
            width: 20rem;
            height: 11.25rem;
            font-size: 1rem;
        }

        .project-card_info p {
            margin: 0rem;
        }

        .project-card_image {
            width: 20rem;
            height: 11.25rem;
        }

        .project-card_image img {
            width: 20rem;
            height: 11.25rem;
        }
    }

    @media (max-width: 400px) {
        .project-card_info {
            width: 18rem;
            height: 10.125rem;
            font-size: 0.7rem;
        }

        .project-card_image {
            width: 18rem;
            height: 10.125rem;
        }

        .project-card_image img {
            width: 18rem;
            height: 10.125rem;
        }
    }

    @media (min-width: 2000px) {
        .project-card_info {
            width: 40rem;
            font-size: 1.5rem;
        }

        .project-card_image img {
            width: 40rem;
            height: 22.5rem;
        }
    }
</style>
