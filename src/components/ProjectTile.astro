---
interface Props {
    title: string
    description: string
    link: string
}
const { title, description, link } = Astro.props
---

<li class="project_tile">
    <a href={link} target="_blanck">
        <h2>
            {title}
            <span>&rarr;</span>
        </h2>
        <p>
            {description}
        </p>
    </a>
</li>

<style>
    .project_tile {
        display: flex;
        padding: 1px;
        background-color: #64ffda;
        border-radius: 7px;
        background-position: 100%;
        box-shadow: inset 0 0 0 1px rgba(0, 0, 0, 0.7);
        width: 100%;
        justify-content: center;
    }

    .project_tile > a {
        text-decoration: none;
        line-height: 1.4;
        padding: calc(1.5rem - 1px);
        border-radius: 8px;
        color: #0a192f;
        background-color: #64ffda;
    }

    .project_tile > a:hover {
        background-color: #0a192f;
        color: #64ffda;
        border: #64ffda 2px solid;
        box-sizing: border-box;
        padding: calc(1.5rem - 3px);

        h2 {
            color: #64ffda;
        }
    }

    h2 {
        margin: 0;
        font-size: 1.25rem;
        color: black;
    }

    p {
        margin-top: 0.5rem;
        margin-bottom: 0;
    }
</style>
